{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.js" },

    { "src": "^/api-docs$", "dest": "/api/index.js" },
    { "src": "^/api-docs/(.*)$", "dest": "/api/index.js" },
    { "src": "^/api-docs\\.json$", "dest": "/api/index.js" },

    { "src": "^/uploads/(.*)$", "dest": "/api/index.js" },

    { "src": "^/health$", "dest": "/api/index.js" },
    { "src": "^/_ping$", "dest": "/api/index.js" },

    { "src": "^/$", "dest": "/api/index.js" }
  ]
}
