# ===========================================
# CONFIGURACIÓN DE ENTORNO - MISITIOFÁCIL
# ===========================================

# Entorno de ejecución
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ===========================================
# BASE DE DATOS
# ===========================================

# MongoDB (Principal)
MONGODB_URI=mongodb://localhost:27017/misitiofacil_dev
MONGODB_TEST_URI=mongodb://localhost:27017/misitiofacil_test

# PostgreSQL (Opcional - para analíticas)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=misitiofacil_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Redis (Opcional - para cache y sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# SEGURIDAD Y AUTENTICACIÓN
# ===========================================

# JWT Configuration
JWT_SECRET=tu_jwt_secret_super_seguro_de_al_menos_32_caracteres_aqui
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_super_seguro_diferente_al_anterior
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=tu_encryption_key_de_32_caracteres

# Session Secret (si usas sessions)
SESSION_SECRET=tu_session_secret_super_seguro

# ===========================================
# SERVICIOS EXTERNOS
# ===========================================

# Cloudinary (Almacenamiento de imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloudinary_cloud_name
CLOUDINARY_API_KEY=tu_cloudinary_api_key
CLOUDINARY_API_SECRET=tu_cloudinary_api_secret
CLOUDINARY_FOLDER=misitiofacil

# Email Service (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password
EMAIL_FROM_NAME=MiSitioFácil
EMAIL_FROM_ADDRESS=noreply@misitiofacil.com

# SendGrid (Alternativa para email)
SENDGRID_API_KEY=tu_sendgrid_api_key

# Twilio (SMS - Opcional)
TWILIO_ACCOUNT_SID=tu_twilio_account_sid
TWILIO_AUTH_TOKEN=tu_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# CONFIGURACIÓN DE APLICACIÓN
# ===========================================

# URLs del Frontend
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001

# URLs de la API
API_BASE_URL=http://localhost:3000/api/v1

# Configuración de archivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PATH=./uploads

# ===========================================
# LÍMITES Y CONFIGURACIONES
# ===========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Paginación
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Límites de negocio
MAX_BUSINESSES_PER_USER=1
MAX_SERVICES_PER_BUSINESS=50
MAX_TEMPLATES_PER_USER=10

# ===========================================
# MONITOREO Y LOGS
# ===========================================

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Sentry (Error tracking - Opcional)
SENTRY_DSN=tu_sentry_dsn

# New Relic (APM - Opcional)
NEW_RELIC_LICENSE_KEY=tu_new_relic_license_key
NEW_RELIC_APP_NAME=MiSitioFacil-Backend

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Debug
DEBUG=misitiofacil:*
DEBUG_COLORS=true

# Seed data para desarrollo
SEED_ADMIN_EMAIL=admin@misitiofacil.com
SEED_ADMIN_PASSWORD=Admin123!

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================

# SSL/TLS
SSL_CERT_PATH=
SSL_KEY_PATH=

# Cluster settings
CLUSTER_MODE=false
MAX_WORKERS=4

# Health check
HEALTH_CHECK_TIMEOUT=30000

# ===========================================
# INTEGRACIONES EXTERNAS
# ===========================================

# Google Maps (para ubicaciones)
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key

# Facebook/Meta (para integración social)
FACEBOOK_APP_ID=tu_facebook_app_id
FACEBOOK_APP_SECRET=tu_facebook_app_secret

# WhatsApp Business API (opcional)
WHATSAPP_ACCESS_TOKEN=tu_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=tu_whatsapp_phone_number_id

# ===========================================
# CONFIGURACIÓN DE PAÍSES Y LOCALIZACIÓN
# ===========================================

# Configuración por defecto
DEFAULT_COUNTRY=CR
DEFAULT_CURRENCY=CRC
DEFAULT_TIMEZONE=America/Costa_Rica
DEFAULT_LANGUAGE=es

# Países soportados (separados por coma)
SUPPORTED_COUNTRIES=CR,GT,SV,HN,NI,PA

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================

# Cache TTL (Time To Live) en segundos
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# ===========================================
# CONFIGURACIÓN DE WEBHOOKS
# ===========================================

# Webhook secrets para verificación
STRIPE_WEBHOOK_SECRET=tu_stripe_webhook_secret
PAYPAL_WEBHOOK_ID=tu_paypal_webhook_id

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================

# Origenes permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://misitiofacil.com

# ===========================================
# CONFIGURACIÓN DE BACKUP
# ===========================================

# AWS S3 para backups (opcional)
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=misitiofacil-backups

# ===========================================
# CONFIGURACIÓN ESPECÍFICA DEL NEGOCIO
# ===========================================

# Configuración de reservas
DEFAULT_BOOKING_ADVANCE_DAYS=30
DEFAULT_BOOKING_ADVANCE_HOURS=2
DEFAULT_BOOKING_DURATION=60

# Configuración de plantillas
DEFAULT_TEMPLATE_ID=
PREMIUM_TEMPLATE_IDS=

# ===========================================
# FEATURES FLAGS
# ===========================================

# Funcionalidades habilitadas/deshabilitadas
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_ANALYTICS=true
ENABLE_ADMIN_PANEL=true
ENABLE_API_DOCS=true

# ===========================================
# CONFIGURACIÓN DE TESTING
# ===========================================

# Base de datos de pruebas
TEST_MONGODB_URI=mongodb://localhost:27017/misitiofacil_test
TEST_REDIS_URI=redis://localhost:6379/1

# Configuración de test
TEST_JWT_SECRET=test_jwt_secret_for_testing_only
TEST_TIMEOUT=30000